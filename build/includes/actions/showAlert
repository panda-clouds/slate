<span class="n">alert</span><span class="o">.</span><span class="n">title</span> <span class="o">=</span> <span class="s">"Top"</span>
<span class="n">alert</span><span class="o">.</span><span class="n">message</span> <span class="o">=</span> <span class="s">"Bottom"</span>

